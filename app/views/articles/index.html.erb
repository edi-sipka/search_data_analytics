<h1>Articles</h1>

<%= form_with(url: articles_path, method: :get, data: { controller: "search-form", turbo_frame: "articles", turbo_action: "advance" }) do |form| %>
  <%= form.label :query, "Search article:" %>
  <%= form.text_field :query, autocomplete: :off, data: { action: "input->search-form#search" } %>
<% end %>

<div>
  <% @articles.present? %>
    <% @articles.each do |article| %>
      <%= article.title %>
    <% end %>
</div>